<div class="span9">
  <div class="col-xs-4 col-md-4">
    <h3><%= t "products" %></h3>
  </div>
  <%= render "shared/nav_admin"%>
  <div class="btn-group">
    <button type="button" class="btn btn-default dropdown-toggle"
      data-toggle="dropdown">Category <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
      <% @last_child_category.each do |c| %>
      <li><%= link_to c.name, admin_products_path(:category_id => c.id) %></li>
      <% end %>
    </ul>
  </div>
  <%= link_to new_admin_product_path,class: "addlink" do %>
    <i class="fa fa-plus-square-o" style="font-size: 16px">
      &nbsp;Add new product...</i>
  <% end %>
  <br>
  <div class="col-md-offset-4">
  <%= will_paginate %>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= t"name" %></th>
        <th><%= t"description" %></th>
        <th><%= t"category" %></th>
        <th><%= t"price" %></th>
        <th><%= t"quantity" %></th>
        <th><%= t"images" %></th>
        <th><%= t"actions" %></th>
      </tr>
      </thead>
      <% if @products.any? %>
      <% @products.each do |product| %>
      <tbody>
        <tr>
          <td><%= link_to product.name, product_path(product) %></td>
          <td><%= raw get_short_description product %>...</td>
          <td><%= product.category_name %></td>
          <td><%= number_to_currency product.price %></td>
          <td><%= product.quantity %></td>
          <td class="rsimg" class="col-md-2">
            <%= image_tag product.image? ? product.image.url : "logan.jpg",
            class: "responsive" %>
          </td>
          <th class="col-md-2 option-product-admin">
            <%= link_to edit_admin_product_path(product),
            class: "btn btn-default button-1" do %>
            <i class="fa fa-wrench"></i>
            <% end %>
          <%= link_to admin_product_path(product), method: :delete,
          class: "btn btn-default", data: {confirm: t("You sure?")} do %>
          <span class="fa fa-trash-o"></span>
          <% end %>
        </th>
      </tr>
      <tbody>
        <% end %>
        <% end %>
      </table>
      <div class="col-md-offset-4">
        <%= will_paginate %>
       </div>
    </div>
  </div>
