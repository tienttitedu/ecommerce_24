<% provide :title, t("view.users.show.profile") %>
<div class="row">
  <div class="col-md-6 col-md-offset-2">
    <div class="container-fluid well span6">
      <div class="row-fluid">
        <section class= "user_info">
          <div class="span2" >
            <%= gravatar_for @user %>
          </div>
          <div class="span9">
            <h3><%= @user.name %></h3>
            <% if current_user?(@user) %> %>
              <%= link_to t("view.users.edit.update_pf"),
                edit_user_path(current_user), class: "btn btn-info" %>
            <% end %>
            <h6><%= t "email_:" %> <%= @user.email %> </h6>
            <h6><%= t "adress_:" %> <%= @user.address %></h6>
            <h6><%= t "phone_number_:" %> <%= @user.phone_number %></h6>
          </div>
        </section>
      </div>
    </div>
  </div>
</div>
