<% provide :title, t("view.users.show.profile") %>

<div class="container-fluid well span6">
  <div class="row-fluid">
    <section class= "user_info">
      <div class="span2" >
        <%= gravatar_for @user %>
      </div>
      <div class="span8">
        <h3><%= @user.name %></h3>
        <h6><%= t "email :" %> <%= @user.email %> </h6>
        <h6><%= t "adress :" %> <%= @user.address %></h6>
        <h6><%= t "phone number :" %> <%= @user.phone_number %></h6>
      </div>
    </section>
  </div>
</div>
