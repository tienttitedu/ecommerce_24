<div class="span9">
  <div class="row">
    <div id="gallery" class="span3">
      <%= link_to(image_tag(@product.image? ? @product.image.url : "iphone.png",
         alt: @product.name),
      @product.image.url, title: @product.name,rel: :lightbox) %>
      <div class="btn-toolbar">
        <div class="btn-group">
          <span class="btn" ><i class="icon-star"></i></span>
        </div>
      </div>
    </div>
  <div class="span6">
    <h3><%= @product.name %></h3>
    <hr class="soft"/>
    <form class="form-horizontal qtyFrm">
      <div class="control-group">

          <label class="control-label">
            <span><%= number_to_currency @product.price %></span>
          </label>
          <div class="controls">
          <%= form_for @order_item, remote: true do |f| %>
            <%= f.hidden_field :product_id, value: @product.id %>
            <%= f.number_field :quantity, value: 1, class: "span1", min: 1 %>
            <%= f.submit "Add to cart",remote: true,
              class: "btn btn-large btn-primary pull-right" %>
              <% end %>
          </div>

      </div>
    </form>
    <hr class="soft clr"/>
    <p>
      <%= @product.description %>
    </p>
    <br class="clr"/>
    <a href="#" name="detail"></a>
    <hr class="soft"/>
  </div>
  <div class="span9">
    <ul id="productDetail" class="nav nav-tabs">
      <li class="active"><a href="#home" data-toggle="tab">Review (<%= @product.reviews.count %>)</a>
      </li>
    </ul>
    <div id="myTabContent">
        <div class="tab-pane fade active in" id="home">
          <% if logged_in? %>
            <div class="container">
            <div class="container">
            <div class="row">
              <%= form_for [@product, @product.reviews.new],
                remote: true do |f| %>
                <div class="col-sm-1">
                  <div class="thumbnail">
                   <%= link_to gravatar_for(current_user, size: Settings.size_image_min),
                    current_user %>
                  </div>
                </div>
                <div class="col-sm-5">
                  <div class="panel panel-default">
                    <div class="panel-heading">
                      <strong><%= link_to current_user.name, current_user %>
                      </strong>
                    </div>
                    <div class="panel-body">
                      <%= f.text_area :content, class: "form-control",
                        class: "form-control"%>
                    </div>
                  </div>
                  <%= f.submit t("post"), class: "btn btn-primary btn-post" %>
                </div>
            </div>
            </div>
            </div>
              <% end %>
              <hr>
          <% else %>
          <div class= "col-md-6 col-md-offset-3">
          <p><%= link_to t("please_login_to_review"), login_path %></p>
          </div>
          <% end %>
          <div id="reviews">
          <div class="container">
            <%= render @reviews %>
          </div>
          </div>
        </div>
    </div>
  </div>
  </div>
</div>
