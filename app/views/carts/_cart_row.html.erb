
<%= form_for order_item, remote: true do |f| %>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th><%= t"product" %></th>
        <th><%= t"description" %></th>
        <th><%= t"quantity/update" %></th>
        <th><%= t"price" %></th>
        <th><%= t"total" %></th>
      </tr>
    </thead>
    <tbody>
      <tr>
       <td class="rsimg" class="col-md-2"> <%= link_to admin_product_path(order_item.product), class: "brand" do %>
        <%= image_tag order_item.product.image? ? order_item.product.image.url : "iphone.png",class: "responsive" %>
        <% end %>
      </td>
      <td><%= raw get_short_description order_item.product %>...</td>
      <td>
      <div class="col-xs-2">
        <%= f.number_field :quantity, value: order_item.quantity.to_i, class: "span1", min: 1 %>
        <%= f.hidden_field :product_id, value: order_item.product.id %>
      </div>
      <div class="col-xs-8 text-right">
        <%= f.submit "Update Quantity", class: "btn btn-primary" %>
        <%= link_to t("delete"), order_item, { data: { confirm: "Are you sure you wish to delete the product '#{order_item.product.name}' from your cart?" }, method: :delete, remote: true, class: "btn btn-danger" } %>
        </div>
      </td>
      <td><%= number_to_currency order_item.unit_price %></td>
      <td><%= number_to_currency order_item.total_price %></td>
    </tr>
  </tbody>
</table>
 <% end %>


